<odoo>
    <record id="view_form_todo_task" model="ir.ui.view">
        <field name="priority">15</field>
        <field name="name">To−do Task Form</field>
        <field name="model">todo.task</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="do_clear_done" type="object" string="Clear Done"/>
                    <button name="do_open" type="object" string="Set to open" attrs="{'invisible': [('state','!=','draft')]}" class="oe_edit_only"/>
                    <button name="do_close" type="object" string="Set to closed" attrs="{'invisible': [('state','!=','open')]}" class="oe_edit_only"/>
                    <button name="do_reset" type="object" string="Reset" attrs="{'invisible': [('state','=','draft')]}" class="oe_edit_only"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                        <span class="oe_read_only">By </span>
                        <label for="user_id" class="oe_edit_only"/>
                        <field name="user_id" class="oe_inline"/>
                        <span>created on </span>
                        <field name="date_created" widget="date" readonly="1" class="oe_inline"/>
                    </div>

                    <group name="group_top">
                        <group name="group_left">
                            <field name="date_deadline"/>
                            <field name="effort_estimate"/>
                            <field name="tag_ids" widget="many2many_tags"/>
                        </group>
                        <group name="group_right">
                            <field name="desc"/>
                            <field name="image" widget="image" class="oe_avatar"/>
                        </group>
                    </group>


                    <notebook>
                        <page string="Team" name="team_page">
                            <field name="team_ids"/>
                            <!--Why does it appear like a many2many_kanban ? -->
                        </page>
                        <page string="Documentation" name="doc_page">
                            <field name="docs" widget="html"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="task_tree_view" model="ir.ui.view">
        <field name="name">To−do Task Tree</field>
        <field name="priority">15</field>
        <field name="model">todo.task</field>
        <field name="arch" type="xml">
            <tree decoration-muted="is_done==True" delete="false">
                <field name="name"/>
                <field name="date_deadline"/>
                <field name="is_done"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="task_search_view">
        <field name="name">task.search</field>
        <field name="priority">15</field>
        <field name="model">todo.task</field>
        <field name="arch" type="xml">
            <search>
                <field name="user_id"/>

                <!-- "Filters" filters -->
                <filter string="Not Done" name="filter_not_done" domain="[('is_done','=',False)]"/>
                <filter string="Done" name="filter_done" domain="[('is_done','=',True)]"/>

                <filter string="Active" name="filter_active" domain="[('active','=',True)]"/>
                <filter string="Not Active" name="filter_not_active" domain="[('active','=',False)]"/>

                <!-- "Group By" filters -->
                <filter string="Responsible" name="responsible_id" context="{'group_by':'user_id'}"/>
            </search>
        </field>
    </record>

    <record model="ir.ui.view" id="task_calendar_calendar" >
        <field name="model">todo.task</field>
        <field name="arch" type="xml">
            <calendar date_start="date_deadline" color="user_id">
                <field name="name"/>
                <field name="state"/>
            </calendar>
        </field>
    </record>


</odoo>
