<odoo>

    <record model="ir.ui.view" id="task_form_view">
        <field name="name">task.form</field>
        <field name="model">todo.task</field>
        <field name="arch" type="xml">
            <form string="Task Form">
                <header>
                    <button string="Clear Done" type="object" name="do_clear_done"/>
                </header>
                <sheet>
                    <group name="group_top">
                        <group name="group_left">
                            <field name="name"/>
                            <field name="user_id"/>
                            <field name="is_done"/>
                            <field name="active"/>
                        </group>
                        <group name="group_right">
                            <field name="date_deadline"/>
                            <field name="team_ids" widget="many2many_tags"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="task_tree_view">
        <field name="name">task.tree</field>
        <field name="model">todo.task</field>
        <field name="arch" type="xml">
            <tree string="Course Tree" decoration-muted="is_done==True">
                <field name="name"/>
                <field name="date_deadline"/>
                <field name="is_done"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="task_search_view">
        <field name="name">task.search</field>
        <field name="model">todo.task</field>
        <field name="arch" type="xml">
            <search>
                <field name="user_id"/>
                <filter string="Not Done" name="filter_not_done" domain="[('is_done','=',False)]"/>
                <filter string="Done" name="filter_done" domain="[('is_done','=',True)]"/>
                <filter string="Active" name="filter_active" domain="[('active','=',True)]"/>
                <filter string="Not Active" name="filter_not_active" domain="[('active','=',False)]"/>
            </search>
        </field>
    </record>

</odoo>