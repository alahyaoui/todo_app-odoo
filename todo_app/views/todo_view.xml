<odoo>
    <record model="ir.ui.view" id="task_form_view">
        <field name="name">task.form</field>
        <field name="model">todo.task</field>
        <field name="arch" type="xml">
            <form string="Task Form">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="user_id"/>
                        <field name="active"/>
                        <field name="date_deadline"/>
                        <field name="teams_ids"/>
                        <field name="is_done"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="task_tree_view">
        <field name="name">task.tree</field>
        <field name="model">todo.task</field>
        <field name="arch" type="xml">
            <tree string="Course Tree">
                <field name="name"/>
                <field name="date_deadline"/>
                <field name="is_done"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="task_search_view">
        <field name="name">task.search</field>
        <field name="model">todo.task</field>
        <field name="arch" type="xml">
            <search>
                <field name="active"/>
                <field name="is_done"/>
            </search>
        </field>
    </record>

</odoo>